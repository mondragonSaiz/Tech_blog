<div
  class='card text-center'
  style='padding:2%; margin-top:2%; margin-bottom:2%;'
>
  <ul class='nav nav-tabs' id='myTab' role='tablist'>
    <li class='nav-item' role='presentation'>
      <button
        class='nav-link active'
        id='home-tab'
        data-bs-toggle='tab'
        data-bs-target='#{{id}}-home-tab-pane'
        type='button'
        role='tab'
        aria-controls='home-tab-pane'
        aria-selected='true'
      >{{user.username}}'s' Post</button>

    </li>
    <li class='nav-item' role='presentation'>
      <button
        class='nav-link'
        id='profile-tab'
        data-bs-toggle='tab'
        data-bs-target='#{{id}}-profile-tab-pane'
        type='button'
        role='tab'
        aria-controls='profile-tab-pane'
        aria-selected='false'
      >Comments</button>
    </li>

  </ul>
  <div class='tab-content' id='myTabContent'>
    <div
      class='tab-pane fade show active'
      id='{{id}}-home-tab-pane'
      role='tabpanel'
      aria-labelledby='home-tab'
      tabindex='0'
      style='padding-top: 1%;'
    >{{content}}</div>
    <div
      class='tab-pane fade'
      id='{{id}}-profile-tab-pane'
      role='tabpanel'
      aria-labelledby='profile-tab'
      tabindex='0'
      style='padding:1%;'
    >

      {{#if comments.length}}
        {{#each comments}}
          <p>{{this.content}}</p>
        {{/each}}
      {{else}}
        <p>No Comments Yet</p>
      {{/if}}

      <button type='button' class='btn btn-outline-success'>Add Comment</button>

    </div>

  </div>
</div>