<div
  class='modal fade'
  id='addCommentModal'
  tabindex='-1'
  role='dialog'
  aria-hidden='true'
  style='margin-top: 5%; border-color: #ffff;'
>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <div class='row' style='padding-top: 2%;'>
          <h5
            class='modal-title'
            style='justify-content:center; text-align:center;  color:var(--dark-green-color);'
          >
            Add Comment</h5>

        </div>
      </div>
      <div
        class='modal-body justify-content-center align-items-center'
        style='border-color: #FFFF;'
      >
        <form id='signUpForm'>
          <div class='form-group'>
            <input
              type='text'
              class='form-control form-signup'
              id='addCommentInput'
              aria-describedby='emailHelp'
              placeholder='...'
              style='justify-content: center; text-align: left; align-items: center; margin-bottom: 2%;'
            />
            {{! <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                      else.</small> }}
          </div>

          <div class='div-btn-submit' style='text-align: center;'>
            <button
              data-id={{this.id}}
              type='submit'
              class='btn btn-outline-dark'
              id='addCommentSubmit'
            >Submit</button>
          </div>

        </form>
      </div>
      {{! <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div> }}
    </div>
  </div>
</div>

<div
  class='card text-center'
  style='padding:2%; margin-top:2%; margin-bottom:2%;'
>
  <ul class='nav nav-tabs' id='myTab' role='tablist'>
    <li class='nav-item' role='presentation'>
      <button
        class='nav-link active'
        id='home-tab'
        data-bs-toggle='tab'
        data-bs-target='#{{id}}-home-tab-pane'
        type='button'
        role='tab'
        aria-controls='home-tab-pane'
        aria-selected='true'
      >{{user.username}}'s' Post</button>

    </li>
    <li class='nav-item' role='presentation'>
      <button
        class='nav-link'
        id='profile-tab'
        data-bs-toggle='tab'
        data-bs-target='#{{id}}-profile-tab-pane'
        type='button'
        role='tab'
        aria-controls='profile-tab-pane'
        aria-selected='false'
      >Comments</button>
    </li>

  </ul>
  <div class='tab-content' id='myTabContent'>
    <div
      class='container tab-pane fade show active'
      id='{{id}}-home-tab-pane'
      role='tabpanel'
      aria-labelledby='home-tab'
      tabindex='0'
      style='padding-top: 1%;'
    >
    <p style="padding-right: 80%; font-weight:700;">{{title}}</p>
    {{content}}
    </br>
      <small style="padding-left: 80%; font-size:x-small;">{{dateOfCreation}}</small>
    </div>
    <div
      class='tab-pane fade'
      id='{{id}}-profile-tab-pane'
      role='tabpanel'
      aria-labelledby='profile-tab'
      tabindex='0'
      style='padding:1%;'
    >

      {{#if comments.length}}
        {{#each comments}}
          <p>{{this.content}}</p>
        {{/each}}
      {{else}}
        <p>No Comments Yet</p>
      {{/if}}

      <button
        type='button'
        data-id='{{id}}'
        data-bs-toggle='modal'
        data-bs-target='#addCommentModal'
        class='btn btn-outline-success addComentBtn-modal'
      >Add Comment</button>

    </div>

  </div>
</div>